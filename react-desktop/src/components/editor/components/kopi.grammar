@top Program { expression* }

@skip { space | LineComment }

expression {
  Identifier |
  Number |
  String |
  Boolean |
  Application { "(" expression* ")" }
}

@tokens {
  @precedence {
    Boolean, Number, Identifier
  }

  Identifier { $[A-Z] $[_a-zA-Z0-9]* }
  Number { $[0-9]+ }
  String { '"' (!["\\] | "\\" _)* '"' }
  Boolean { "true" | "false" }
  LineComment { "#" ![\n]* }
  space { $[ ]+ }
  "(" ")" "{" "}"
}

@detectDelim
